<core:FragmentDefinition xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form"
	xmlns:unified="sap.ui.unified" xmlns:core="sap.ui.core">
	<VBox>
		<SearchField liveChange="onSearchList" width="50%"/>
		<List id="idList" items="{northwindModel>/Employees}" growing="true" growingThreshold="10">
			<infoToolbar>
				<OverflowToolbar visible="false" id="idInfoToolbar">
					<Label id="idFilterLabel"/>
				</OverflowToolbar>
			</infoToolbar>
			<StandardListItem title="{northwindModel>FirstName} {northwindModel>LastName}" description="{ path: 'northwindModel>BirthDate', type: 'sap.ui.model.odata.type.DateTime', formatOptions: { UTC: true, pattern: 'dd/MM/yyyy'} }" info="{northwindModel>Country}" infoState="{= ${northwindModel>Country} === 'USA' ? 'Error' : 'Success'}"/>
		</List>
	</VBox>
</core:FragmentDefinition>