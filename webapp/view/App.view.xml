<mvc:View controllerName="com.amista.Day1.controller.App" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Button text="Say Hello" icon="sap-icon://hello-world" press="handleMessageToastPress"/>
						<Table id="idCustomersTable" items="{ path: 'northwindModel>/Customers', filters: [{path: 'Country', operator: 'EQ', value1: 'USA'}]}">
							<columns>
								<Column width="12em">
									<Text text="Customer ID"/>
								</Column>
								<Column width="12em">
									<Text text="Company Name"/>
								</Column>
								<Column width="12em">
									<Text text="Contact Name"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onItemClicked" type="Navigation">
									<cells>
										<Text text="{northwindModel>CustomerID}"/>
										<Text text="{northwindModel>CompanyName}"/>
										<Text text="{northwindModel>ContactName}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<f:SimpleForm id="SimpleFormToolbar" editable="true" layout="ResponsiveGridLayout">
							<f:content>
								<Label text="Name"/>
								<Input value="{SimpleFormModel>/name}"/>
								<Label text="Surname"/>
								<Input value="{SimpleFormModel>/surname}"></Input>
								<Label text="Age"/>
								<Input value="{SimpleFormModel>/age}"/>
								<Button text="Save" icon="sap-icon://save" press="onSavePressed"/>
							</f:content>
						</f:SimpleForm>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>