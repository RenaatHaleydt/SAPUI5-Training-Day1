<mvc:View controllerName="com.amista.Day1.controller.App" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:uxap="sap.uxap" xmlns:smartList="sap.ui.comp.smartlist">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<VBox>
							<Button text="{i18n>objectPageHeaderActionButtonFirstText}" icon="sap-icon://hello-world" press="handleMessageToastPress"/>
							<IconTabBar id="idIconTabBarNoIcons" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
								<items>
									<IconTabFilter text="{i18n>tableSection}" key="info">
										<VBox>
											<Table id="idCustomersTable" items="{ path: 'northwindModel>/Customers', filters: [{path: 'Country', operator: 'EQ', value1: 'USA'}]}">
												<columns>
													<Column width="12em">
														<Text text="{i18n>customerID}"/>
													</Column>
													<Column width="12em">
														<Text text="{i18n>companyName}"/>
													</Column>
													<Column width="12em">
														<Text text="{i18n>contactName}"/>
													</Column>
												</columns>
												<items>
													<ColumnListItem press="onItemClicked" type="Navigation">
														<cells>
															<Text text="{northwindModel>CustomerID}"/>
															<Text text="{northwindModel>CompanyName}"/>
															<Text text="{northwindModel>ContactName}"/>
														</cells>
													</ColumnListItem>
												</items>
											</Table>
										</VBox>
									</IconTabFilter>
									<IconTabFilter text="{i18n>form}" key="attachments">
										<VBox>
											<f:SimpleForm id="SimpleFormToolbar" editable="true" layout="ResponsiveGridLayout">
												<f:content>
													<Label text="{i18n>name}"/>
													<Input value="{SimpleFormModel>/name}"/>
													<Label text="{i18n>surname}"/>
													<Input value="{SimpleFormModel>/surname}"></Input>
													<Label text="{i18n>age}"/>
													<Input value="{SimpleFormModel>/age}"/>
													<Button text="{i18n>save}" icon="sap-icon://save" press="onSavePressed"/>
												</f:content>
											</f:SimpleForm>
											<VBox>
												<SearchField liveChange="onSearchList" width="50%"/>
												<List id="idList" items="{northwindModel>/Employees}" growing="true" growingThreshold="10">
													<infoToolbar>
														<OverflowToolbar visible="false" id="idInfoToolbar">
															<Label id="idFilterLabel"/>
														</OverflowToolbar>
													</infoToolbar>
													<StandardListItem title="{northwindModel>FirstName}" description="{northwindModel>LastName}"/>
												</List>
											</VBox>
										</VBox>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>