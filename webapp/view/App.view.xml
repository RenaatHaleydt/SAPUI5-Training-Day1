<mvc:View controllerName="com.amista.Day1.controller.App" xmlns:f="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:uxap="sap.uxap">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<uxap:ObjectPageLayout useIconTabBar="true" showAnchorBarPopover="false">
							<uxap:headerTitle >
								<uxap:ObjectPageHeader objectTitle="{i18n>objectTitle}" isObjectTitleAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true"
									isActionAreaAlwaysVisible="true" showPlaceholder="true" class="sapUiMediumMarginTop">
									<uxap:actions>
										<uxap:ObjectPageHeaderActionButton text="{i18n>objectPageHeaderActionButtonFirstText}" icon="sap-icon://hello-world"
											press="handleMessageToastPress"/>
									</uxap:actions>
								</uxap:ObjectPageHeader>
							</uxap:headerTitle>
							<uxap:sections>
								<uxap:ObjectPageSection title="{i18n>tableSection}" class="sapUiTinyMargin sapUiNoContentPadding">
									<uxap:customAnchorBarButton>
										<Button text="{i18n>tableSection}" icon="sap-icon://hint" class="sapUiContentPadding roundButton"/>
									</uxap:customAnchorBarButton>
									<uxap:subSections>
										<uxap:ObjectPageSubSection titleLevel="H1" titleUppercase="true" class="sapUiTinyMargin sapUiNoContentPadding">
											<uxap:blocks>
												<VBox>
													<Table id="idCustomersTable" items="{ path: 'northwindModel>/Customers', filters: [{path: 'Country', operator: 'EQ', value1: 'USA'}]}">
														<columns>
															<Column width="12em">
																<Text text="{i18n>customerID}"/>
															</Column>
															<Column width="12em">
																<Text text="{i18n>companyName}"/>
															</Column>
															<Column width="12em">
																<Text text="{i18n>contactName}"/>
															</Column>
														</columns>
														<items>
															<ColumnListItem press="onItemClicked" type="Navigation">
																<cells>
																	<Text text="{northwindModel>CustomerID}"/>
																	<Text text="{northwindModel>CompanyName}"/>
																	<Text text="{northwindModel>ContactName}"/>
																</cells>
															</ColumnListItem>
														</items>
													</Table>
												</VBox>
											</uxap:blocks>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
								<uxap:ObjectPageSection title="{i18n>form}" class="sapUiTinyMargin sapUiNoContentPadding">
									<uxap:customAnchorBarButton>
										<Button text="{i18n>form}" icon="sap-icon://hint" class="sapUiContentPadding roundButton"/>
									</uxap:customAnchorBarButton>
									<uxap:subSections>
										<uxap:ObjectPageSubSection titleLevel="H1" titleUppercase="true" class="sapUiTinyMargin sapUiNoContentPadding">
											<uxap:blocks>
												<VBox>
													<f:SimpleForm id="SimpleFormToolbar" editable="true" layout="ResponsiveGridLayout">
														<f:content>
															<Label text="{i18n>name}"/>
															<Input value="{SimpleFormModel>/name}"/>
															<Label text="{i18n>surname}"/>
															<Input value="{SimpleFormModel>/surname}"></Input>
															<Label text="{i18n>age}"/>
															<Input value="{SimpleFormModel>/age}"/>
															<Button text="{i18n>save}" icon="sap-icon://save" press="onSavePressed"/>
														</f:content>
													</f:SimpleForm>
												</VBox>
											</uxap:blocks>
										</uxap:ObjectPageSubSection>
									</uxap:subSections>
								</uxap:ObjectPageSection>
							</uxap:sections>
						</uxap:ObjectPageLayout>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>